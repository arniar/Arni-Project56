<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ARNI - Dark Fashion</title>
    <link rel="stylesheet" href="/stylesheets/index/home.css">
</head>
<body>
    <canvas id="backgroundCanvas"></canvas>
    
    <div class="content">
        <div class="nav-container">
            <a href="#" class="logo">ARNI</a>
            <div class="nav-links">
                <a href="/">Home</a>
                <a href="/shop">Shop</a>
                <a href="/men?main=6789227acde361112431cefb">Men</a>
                <a href="/women?main=67892293cde361112431cf00">Women</a>
                <a href="/kid?main=678922abcde361112431cf05">Kids</a>
            </div>
            <div class="nav-right">
                <% if (authentication) { %>
                    <a href="/users/pI">
                      <i class="fas fa-user-circle"></i> Profile
                    </a>
                  <% } else { %>
                    <a href="/auth/login">Login</a>
                  <% } %>                      
                <a href="#">üîç</a>
                <a href="/users/cart">üõí</a>
            </div>
        </div>
    </nav>

        <section class="featured-products">
            <div class="container">
                <div class="section-title">
                    <h2>Kids's Collection</h2>
                    <p>Explore our latest kids's fashion</p>
                </div>
                <div class="product-grid">
                    <% cards.forEach(function(card) { %>
                        <a href="/overview/<%= card._id %>" class="product-card-link">
                            <div class="product-card">
                                <div class="product-image-container">
                                    <img src="<%= card.images %>" 
                                         alt="<%= card.productDetails.name %>" 
                                         class="product-image">
                                </div>
                                <div class="product-info">
                                    <h3 class="product-name"><%= card.productDetails.name %></h3>
                                    <div class="price-layout">
                                        <div class="price-row">
                                            <span class="discount-price">‚Çπ<%= card.productDetails.discountPrice.toFixed(2) %></span>
                                            <span class="original-price">‚Çπ<%= card.productDetails.price.toFixed(2) %></span>
                                        </div>
                                        <% if (card.productDetails.price > card.productDetails.discountPrice) { %>
                                            <span class="discount-percentage">
                                                <%= Math.round((1 - card.productDetails.discountPrice/card.productDetails.price) * 100) %>% off
                                            </span>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </a>
                    <% }); %>
                </div>
            </div>
        </section>


        <footer>
            <div class="container">
                <div class="footer-content">
                    <div class="footer-section">
                        <h3>About ARNI</h3>
                        <p>Fashion for everyone</p>
                    </div>
                    <div class="footer-section">
                        <h3>Quick Links</h3>
                        <a href="index.html">Home</a>
                        <a href="mens.html">Men</a>
                        <a href="womens.html">Women</a>
                    </div>
                    <div class="footer-section">
                        <h3>Contact Us</h3>
                        <p>Email: info@arni.com</p>
                    </div>
                    <div class="footer-section">
                        <h3>Follow Us</h3>
                        <div class="social-links">
                            <a href="#">Instagram</a>
                            <a href="#">Facebook</a>
                            <a href="#">Twitter</a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script src="/javascripts/index/kid.js"></script>
</body>
</html>